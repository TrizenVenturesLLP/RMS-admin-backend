{
  "name": "riders-moto-backend",
  "version": "1.0.0",
  "description": "Backend API for Riders Moto Shop ecosystem",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "node src/database/migrate.js",
    "migrate:prod": "NODE_ENV=production node src/database/migrate-production.js",
    "migrate:enhanced": "node run-migrations.js",
    "migrate:enhanced:prod": "NODE_ENV=production node run-migrations.js",
    "check-tables": "node src/database/check-tables.js",
    "fix-prod-db": "NODE_ENV=production node fix-production-db.js",
    "create-admin": "NODE_ENV=production node create-admin-user.js",
    "seed": "node src/database/seed.js",
    "seed:categories": "node seed-htexhaust-categories.js",
    "seed:products": "node seed-htexhaust-products.js",
    "view:categories": "node view-categories.js",
    "setup": "node setup.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "docker build -f Dockerfile.prod -t riders-moto-backend:latest .",
    "build:prod": "docker build -f Dockerfile.prod -t riders-moto-backend:latest .",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "stop": "docker-compose -f docker-compose.prod.yml down",
    "restart": "docker-compose -f docker-compose.prod.yml restart"
  },
  "keywords": ["motorcycle", "ecommerce", "api", "nodejs"],
  "author": "Riders Moto Shop",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "minio": "^7.1.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "redis": "^4.6.10",
    "nodemailer": "^6.9.7",
    "stripe": "^14.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
